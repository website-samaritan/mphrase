
<div class="row">
	<div class="small-12 large-12 columns">
		<h1>Fun with d3.js</h1>
	</div>
</div>

<div class="row">
	<div class="small-12 large-6 columns">
		<div class="d3-container"></div>
	</div>
	<div class="small-12 large-6 columns">
		<blockquote>
			<p>If you are not embarrassed by the first version of your product, you’ve launched too late.</p>
			<cite>Reid Hoffman</cite>
		</blockquote>			
	</div>
</div>

<script type="text/javascript">
	(function (d3) {
		'use strict';

		var data = [30, 60, 10],
			max = Math.max.apply(null, data),
			width = 400,
			height = 400,
			bar = {
				height: 50,
				padding: 10
			},

			// Composite elements
			container = d3.select('.d3-container'),
			canvas = container.append('svg'),
			chart = canvas.append('g')
				.attr({
					title: 'Bar Chart',
					transform: 'translate(20, 10)'
				}),
			barGroup = chart.append('g')
				.attr('title', 'Bar Group'),
			
			// Scales
			widthScale = d3.scale.linear()
				.domain([0, max])
				.range([0, width]),
			colorScale = d3.scale.linear()
				.domain([0, max])
				.range(['red', 'blue']),

			// Axes
			axis = d3.svg.axis()
				.scale(widthScale)
				.ticks(5);

			canvas
				.attr({
					width: width + 50,
					height: height
				});

			chart.append('g')
				.attr('transform', 'translate(0, 180)')
				.call(axis);

			barGroup.selectAll('rect')
				.data(data)
				.enter()
				.append('rect')
				.attr({
					height: bar.height,

					width: widthScale,

					y: function (value, index) {
						return index * (bar.height + bar.padding);
					},

					fill: colorScale
				});
	})(d3);
	
</script>
